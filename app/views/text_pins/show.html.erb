<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @text_pin.title %>
</p>

<p>
  <b>Content:</b>
  <%= @text_pin.content %>
</p>

<p>
  <b>User:</b>
  <%= @text_pin.user_id %>
</p>
<div id="allcomments">
  <p>
    <% @comments.each do |comment| %>
      <p>
      <strong><%= User.find(comment.user_id).username %></strong>: <%= comment.content %>
      </p>
    <% end %>
  </p>
</div>
<%= form_for @comment do |f| %>
  <%= f.text_area :content, placeholder: "Enter Comment Here" %>
  <%= f.hidden_field :commentable_type, value: "Text_Pin" %>
  <%= f.hidden_field :commentable_id, value: @text_pin.id %>
  <%= f.hidden_field :board_id, value: @board %>
  <%= f.submit 'Submit Comment', id: "commentsubmit" %>
<% end %>

<% if current_user == @text_pin.user %>
<%= link_to 'Edit', edit_board_text_pin_path(@board) %>
<% end %>
<%= link_to 'Back', board_path(@board) %>
